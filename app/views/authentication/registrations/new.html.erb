<div class="container-login100">
		
   <div class="wrap-login100">
   		<div>
   			<%= flash_message(flash[:error]) %>
   		</div>
      	<%= form_with model: @user, url: signup_path, local: true, html: { method: :post, class: 'login100-form validate-form' } do |f| %>
         <span class="login100-form-title p-b-26">
         Please sign in 
         </span>
         <span class="login100-form-title p-b-48">
         <i class="zmdi zmdi-font"></i>
         </span>
         <div class="wrap-input100 validate-input" data-validate="Valid FirstName">
            <%= f.text_field :first_name, placeholder: 'First Name', class: 'input100', required: true %>
            <span class="focus-input100" data-placeholder="FirstName"></span>
         </div>
         <div class="wrap-input100 validate-input" data-validate="Valid LastName">
            <%= f.text_field :last_name, placeholder: 'Last Name', class: 'input100', required: true %>
            <span class="focus-input100" data-placeholder="LastName"></span>
         </div>
         <div class="wrap-input100 validate-input" data-validate="Valid email is: user@example.com">
            <%= f.email_field :email, placeholder: 'user@example.com', class: 'input100', required: true %>
            <span class="focus-input100" data-placeholder="Email"></span>
         </div>
         <div class="wrap-input100 validate-input" data-validate="Enter password">
            <span class="btn-show-pass">
            <i class="zmdi zmdi-eye"></i>
            </span>
            <%= f.password_field :password, class: 'input100', required: true %>
            <span class="focus-input100" data-placeholder="Password"></span>
         </div>
         <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
               <div class="login100-form-bgbtn"></div>
               <button class="btn btn-primary ">
               Sign Up
               </button>
            </div>
         </div>
         <div class="text-center p-t-115">
            <span class="txt1">
            Already have account?
            </span>
            <%= link_to 'Sign in', login_path, class: "txt2" %>
         </div>
      <%- end -%>
   </div>
</div>